{
  "name": "Dataset",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "sampleName": {
      "type": "string"
    },
    "chemicalFormula": {
      "type": "string"
    },
    "technique": {
      "type": "string"
    },
    "wavelength": {
      "type": "number"
    },
    "path": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "query": {
      "accepts": [
        {
          "arg": "searchTerm",
          "type": "object",
          "required": false,
          "description": "Object containing one or more properties, e.g. wavelength, or text for full text search",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [
        {
          "arg": "queryResults",
          "type": "object",
          "root": true,
          "description": "Array of objects from search results"
        }
      ],
      "description": "Query PaNOSC institutes for scientific metadata",
      "http": [
        {
          "path": "query",
          "verb": "get"
        }
      ]
    }
  }
}
